version: '3.7'

services:

  workspace:
    build:
      args:
        UID: ${UID}
        GID: ${GID}
      context: ./workspace
    image: dockstead_workspace
    volumes:
      - ${CODE_PATH}:/home/dockstead/code
    networks:
      snapx-network:
        ipv4_address: ${WORKSPACE_IP}

  php74:
    build:
      args:
        PHP_VERSION: 7.4
        UID: ${UID}
        GID: ${GID}
      context: ./php
    image: dockstead_php74
    volumes:
      - ${CODE_PATH}:/var/www:delegated
      - ./php/xdebug.ini:/usr/local/etc/php/conf.d/xdebug.ini
    networks:
      snapx-network:
        ipv4_address: ${PHP74_IP}

  php73:
    build:
      args:
        PHP_VERSION: 7.3
        UID: ${UID}
        GID: ${GID}
      context: ./php
    image: dockstead_php73
    volumes:
      - ${CODE_PATH}:/var/www:delegated
      - ./php/xdebug.ini:/usr/local/etc/php/conf.d/xdebug.ini
    networks:
      snapx-network:
        ipv4_address: ${PHP73_IP}

  php72:
    build:
      args:
        PHP_VERSION: 7.2
        UID: ${UID}
        GID: ${GID}
      context: ./php
    image: dockstead_php72
    volumes:
      - ${CODE_PATH}:/var/www:delegated
      - ./php/xdebug.ini:/usr/local/etc/php/conf.d/xdebug.ini
    networks:
      snapx-network:
        ipv4_address: ${PHP72_IP}

  nginx:
    build:
      context: ./nginx
    image: dockstead_nginx
    depends_on:
      - php72
      - php73
      - php74
    volumes:
      - ./nginx/sites:/etc/nginx/conf.d:ro
      - ./nginx/logs:/var/log/nginx
      - ${CODE_PATH}:/var/www:ro,delegated
    ports:
      - ${NGINX_PORT}:80
    networks:
      snapx-network:
        ipv4_address: ${NGINX_IP}

  mysql:
    image: mysql:5.7
    restart: unless-stopped
    tty: true
    environment:
      MYSQL_ROOT_PASSWORD: root
    volumes:
      - dbdata:/var/lib/mysql
    ports:
      - ${MYSQL_PORT}:3306
    networks:
      snapx-network:
        ipv4_address: ${MYSQL_IP}

volumes:
  dbdata:
    driver: local

networks:
  snapx-network:
    driver: bridge
    ipam:
      config:
        - subnet: ${SUBNET_IP}/16
